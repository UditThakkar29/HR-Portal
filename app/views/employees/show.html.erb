<div class = "col-lg-12">
  <div class="card mt-5 mb-5">
      <div class="card-body">
          <h2 class="text-center">Employee Details</h2>
          <div class="row mt-5">
            <div class="col-lg-6">
              <h3 class="mb-3">Personal Info</h3>
              <p class="lead"><strong>First Name:</strong> <%= @employee.fname %></p>
              <p class="lead"><strong>Middle Name:</strong> <%= @employee.mname.present? ? @employee.mname : "NA" %></p>
              <p class="lead"><strong>Last Name:</strong> <%= @employee.lname %></p>
              <p class="lead"><strong>Email :</strong> <%= @employee.email %></p>
            </div>
            <div class="col-lg-6">
              <h3 class="mb-3">Address Info</h3>
              <p class="lead"><strong>Address Line 1:</strong> <%= @employee.address_1 %></p>
              <p class="lead"><strong>Address Line 2:</strong> <%= @employee.address_2.present? ? @employee.address_2 : "NA" %></p>
              <p class="lead"><strong>City:</strong> <%= @employee.city %></p>
              <p class="lead"><strong>State :</strong> <%= @employee.city %></p>
              <p class="lead"><strong>Country :</strong> <%= @employee.country %></p>
              <p class="lead"><strong>Pincode :</strong> <%= @employee.pincode %></p>
            </div>
          </div>
          <%= link_to "Back to Employees", employees_path, class: "btn btn-outline-primary btn-lg rounded-0" %>
          <%= link_to "Edit Employees", edit_employee_path(@employee), class: "btn btn-primary btn-lg rounded-0" %>
      </div>
  </div>
</div>
