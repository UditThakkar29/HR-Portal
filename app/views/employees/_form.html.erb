        <% @employee.errors.full_messages_for(:city).each do |message| %>
          <p class="text-danger"><%= message %></p>
        <% end %>
      </div>
    </div>

    <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :state, class: 'mb-2'%>
        <%= form.text_field :state, class: 'form-control form-control-lg rounded-0'%>
